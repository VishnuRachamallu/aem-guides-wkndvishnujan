<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Title"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.title.v2.editor,showhide.clientlibs]"
    helpPath="https://www.adobe.com/go/aem_cmp_title_v2"
    trackingFeature="core-components:title:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Container"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <dropdown_x0020_select
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                class="cq-dialog-tab-showhide"
                                cq-dialog-tab-showhide-target=".imageVideo-tab-showhide-target"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Drop down"
                                name="./dropdown">
                                <items jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        text="image"
                                        value="image"/>
                                    <video
                                        jcr:primaryType="nt:unstructured"
                                        text="video"
                                        value="video"/>
                                </items>
                            </dropdown_x0020_select>
                        </items>
                    </container>
                    <image
                        jcr:primaryType="nt:unstructured"
                        jcr:title="image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Title"
                                name="./title123"/>
                        </items>
                        <layoutConfig
                            jcr:primaryType="nt:unstructured"
                            class="hide imageVideo-tab-showhide-target image"/>
                    </image>
                    <video
                        jcr:primaryType="nt:unstructured"
                        jcr:title="video"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Leave empty to use the page title."
                                fieldLabel="Title"
                                name="./title1234"/>
                        </items>
                        <layoutConfig
                            jcr:primaryType="nt:unstructured"
                            class="hide imageVideo-tab-showhide-target video"/>
                    </video>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
